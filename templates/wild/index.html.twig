{% extends 'base.html.twig' %}
{% block title %} All programs {% endblock %}
{% block body %}




    {{ form_start(form) }}
    {{ form_row(form.name) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}


    <h1>All the series from program : </h1>
    {% for program in programs %}
    <div>
        <h2>{{ loop.index }} / {{ program.title }} - Category : {{ program.category.name }}</h2>
        <p>{{ program.summary }}</p>
    </div>
    {% else %}
    No program found.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Back to home
    </a>
    <br>

    {# templates/index.html.twig #}
    <a href="{{ path('wild_show', { 'slug': "walking-dead" }) }}">
        Testing show() method from WildController with a real program's slug.
    </a>
    <br>
    <a href="{{ path('wild_index') }}">
        Testing index() method from WildController to view all programs.
    </a>


{% endblock %}

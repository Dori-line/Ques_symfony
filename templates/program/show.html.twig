{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ program.poster }}</td>
            </tr>
        </tbody>
    </table>

    <strong>Actors :</strong>
    <ul>
        {% for actor in program.actors %}
            <a href="{{ path('actor_show', {'slug': actor.slug}) }}">{{ actor.name }} </a>
        {% else %}
            <li>No actor for this program</li>
        {% endfor %}
    </ul>

    <strong>Seasons :</strong>
    <ul>
        {% for season in program.seasons %}
            <a href="{{ path('season_show', {'id': season.id}) }}">Saison {{ season.number }} </a>
        {% else %}
            <li>No seasons for this program</li>
        {% endfor %}
    </ul>



    <a href="{{ path('program_index') }}">back to list</a>

    <a href="{{ path('program_edit', {'slug': program.slug}) }}">edit</a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}

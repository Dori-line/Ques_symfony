{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('global') }}
    {{ encore_entry_link_tags('show_program') }}
{% endblock %}

{% block body %}
    <h1>Program</h1>

    <div class="one-program">
        <h2 class="primary-title">{{ program.title }}</h2>
        <p>{{ program.summary }}</p>

        <p>{{ program.poster }}</p>

        <strong>Actors :</strong>
        <ul>
            {% for actor in program.actors %}
                <li><a href="{{ path('actor_show', {'slug': actor.slug}) }}">{{ actor.name }} </a></li>
            {% else %}
                <li>No actor for this program</li>
            {% endfor %}
        </ul>

        <strong>Seasons :</strong>
        <ul>
            {% for season in program.seasons %}
               <li> <a href="{{ path('season_show', {'id': season.id}) }}">Season {{ season.number }} </a></li>
            {% else %}
                <li>No seasons for this program</li>
            {% endfor %}
        </ul>

    </div>



    <a href="{{ path('program_index') }}">back to list</a>

    <a href="{{ path('program_edit', {'slug': program.slug}) }}">edit</a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
